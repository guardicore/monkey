{
    "parser": "@babel/eslint-parser",
    "plugins": ["react"],
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "parserOptions": {
        "requireConfigFile": false,
        "ecmaVersion": 6,
        "ecmaFeatures": {
            "jsx": true,
            "globalReturn": false
        },
        "babelOptions": {
            "configFile": false
        }
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "env": {
        "browser": true,
        "amd": true,
        "es6": true,
        "node": true,
        "mocha": true
    },
    "rules": {
        "comma-dangle": 1,
        "quotes": [
            1,
            "single",
            {
                "allowTemplateLiterals": true
            }
        ],
        "no-undef": 1,
        "global-strict": 0,
        "no-underscore-dangle": 0,
        "no-console": 0,
        "no-unused-vars": [
            1,
            {
                "vars": "all",
                "args": "all",
                "argsIgnorePattern": "^_",
                "varsIgnorePattern": "^React$"
            }
        ],
        "no-trailing-spaces": [
            1,
            {
                "skipBlankLines": true
            }
        ],
        "no-unreachable": 1,
        "no-alert": 0,
        "react/jsx-uses-react": 1,
        "react/jsx-uses-vars": 1,
        "react/jsx-key": 1,
        "react/prop-types": 0,
        "react/no-unescaped-entities": 0,
        "react/no-unknown-property": [
            1,
            {
                "ignore": ["class"]
            }
        ],
        "react/no-string-refs": 1,
        "react/display-name": 1,
        "no-useless-escape": 1,
        "no-prototype-builtins": 1
    }
}
